.coupon-close image{
  position: relative;
  display: block;
  margin: 5rpx auto 0;
  width: 50rpx;
  height: 50rpx;
  z-index: 103;
}
.coupon-bg{
    position: fixed;
    z-index: 30;
    left: 0;
    top:0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
}


@keyframes couponanim{
  0%{transform: translate(-50%,-50%) scale(.2) ;opacity: 0; }
  25%{transform: translate(-50%,-50%) scale(.4) ;opacity: 1;}
  50%{transform: translate(-50%,-50%) scale(.6);opacity: 1;}
  75%{transform:translate(-50%,-50%) scale(.8) ;opacity: 1;}
  100%{transform:translate(-50%,-50%) scale(1) ;opacity: 1;}
}
.coupon-list{
  margin-top: 20rpx;
}
.coupon-item{
  margin-bottom: 30rpx;
}
.coupon-info{
  background: #fff;
  width: 90%;
  height:140rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  position: relative;
}
.coupon-amount text{
 font-size: 28rpx;
 font-weight: 400;

}
.coupon-amount{
  font-size: 50rpx;
   color:#f34534;
   padding-left:20rpx;
   letter-spacing: 4rpx; 
   font-weight: 600;
   width:160rpx;
}
.coupon-detail-info{
  font-size: 28rpx;
  flex:1;
}
.coupon-detail-info .coupon-name{
   font-size: 36rpx;
   font-weight: 600;
}
.coupon .dash{
width: 1rpx;
height: 80%;
background-image: linear-gradient(to bottom, #ccc 0%, #ccc 50%, transparent 50%);
background-size: 2px 12px;
background-repeat: repeat-y;
margin-left: 14rpx;
}
.coupon .notice{
   font-size: 24rpx;
   color:#fff;
   letter-spacing: 10rpx;
}
.coupon-info .circle{
  background: #f73b3d;
  position: absolute;
  height:30rpx;
  width:30rpx;
  top:-20rpx;
  left:180rpx;
  border-radius:50%; 
}
