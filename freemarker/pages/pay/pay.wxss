/* pages/pay/pay.wxss */
page{
  background: #f5f5f5;
}
.section{
 background: #fff;
}
.pay-info{
 padding: 0 30rpx  30rpx; 
  text-align: center;
}
.real-pay{
  padding-top: 50rpx;
  font-size: 32rpx; 
  color:#333;
}
.real-pay-price{
  padding: 30rpx 0 50rpx 0;
  border-bottom:1rpx solid #e5e5e5; 
}
.delivery-fee{
  text-align: left;
  margin: 30rpx 0;
  display: flex;
}
.coupons{
  display: flex;
 
  text-align: left;
}
.coupons .value{
  color:#ff8400;
 font-size: 28rpx;
}
.coupons .label ,.delivery-fee .label{
  flex:1;
  font-size: 28rpx;
}
.coupons .right-jiantou{
    width:44rpx;
   height:44rpx;
   margin-left: 30rpx;
}
.price-tag{
  font-size: 50rpx;
  color:#333;
  font-weight: 600;
  margin-right: 10rpx;
}
.price-amount{
  font-size: 60rpx;
  color:#333;
  font-weight: 600;
}
.pay-type-title{
  font-size: 28rpx;
  color: #666;
  margin: 25rpx 30rpx;
}
.pay-type{
  height:96rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.wechatpay-icon{
 width:45rpx;
 height:45rpx;
 margin-right: 15rpx;
}
.wechat-text{
  flex:1;
  font-size: 28rpx;
  color:#333;
}
.success-icon{
  width:45rpx;
 height:45rpx;
 padding-right: 30rpx;
}
.pay-button{
   background: #ff8400;
   color:#fff;
   text-align: center;
   height:90rpx;
   margin-top: 30rpx;
   width:690rpx;
   margin: 30rpx auto;
   line-height: 90rpx;
   border-radius:10rpx;
   font-size: 36rpx; 
}