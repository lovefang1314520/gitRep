/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.login-box{
  margin-top: 30rpx;
}
.login-row{
  background-color: #fff;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}
.login-row text{
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  display: inline-block;
}
.login-row input{
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  vertical-align:middle;
  width:70%;
}
.code-box{
  border-top: none;
}
.code-box input{
  width:52%;
}
.code-box .code-button{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  display:inline-block;
  vertical-align:middle;
}
.code-button.orange{
  border:1px solid #ff8400;
  color: #ff8400;
  background-color: #fff;
}
.checkbox-box{
  margin: 30rpx;
  margin-right: 0;
}
.checkbox-item{
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  display:inline-block;
  vertical-align:middle;
}
.text-box{
  display:inline-block;
  vertical-align:top;
  width: 80%;
}
.gray-text{
  font-size: 22rpx;
  color: #999;
}
.register-text{
  font-size: 22rpx;
  color: #359fec;
  margin-left: 12rpx;
}
.login-confirm{
  width:690rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
  background-color: #e6e6e6;
  margin: 0 auto;
  color: #999;
  font-size: 36rpx;
}
.login-confirm.orange{
  color: #fff;
  background-color: #ff8400;
}
.service-tel{
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  margin-left: -135rpx;
  width: 270rpx;
  font-size: 22rpx;
   color: #666;
}
.close-button{
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
}
.close-button.show{
  display: inline-block;
}
.close-button.hide{
  display: none;
}
.login-confirm::after{
border: none;
}
.code-button::after{
border: none;
}