.order-detail-box .text-center{
   text-align: center;
}
.order-status{
  margin-bottom: 20rpx;
}
.order-detail-box .font-bold{
  font-weight: 600;
}
.order-detail-box .h1{
  font-size: 28rpx;
}
.order-detail-box .h2{

}
.order-detail-box .h3{
font-size: 26rpx;

}
.order-detail-box .h4{
 font-size: 20rpx;
}
.margin-bottom{
  margin-bottom: 30rpx;
}
.product-list,.price-info,.order-info{
  margin: 40rpx;
  font-size: 26rpx;
}
.split{
  height:2rpx; 
  background:  #f5f5f5;
}
.product-item{
   font-size: 26rpx;
  display: flex;
  margin-bottom: 40rpx;
}

.product-item .title{
   font-size: 26rpx;
   flex:3;
}
.product-item .num{
  flex:1;
}
.price-info .item,.order-info .item{
  margin-bottom: 40rpx;
  display: flex;
}
.text-right{
  text-align: right;
}
.price-info .item text,.order-info .item{
  flex:1;
  font-size: 28rpx;
}
.font-red{
  color:#ff3800;
}
.order-info .item text:first-child{
  
  width:150rpx;
  display: inline-block;
}