/* pages/vip/vip.wxss */
page {
width: 100%;
height:100%;
background-color:#f5f5f5;

}
.vip-box{
  background-color:#f5f5f5;
}
.unlogin{
  padding: 50rpx 30rpx  50rpx 90rpx;
  background-color: #ff8400;
  display: flex;
  justify-content: space-between;
  color: #fff;
  font-size: 32rpx;
}
.unlogin-img{
  width: 44rpx;
  height: 44rpx;
  margin-top: 30rpx;
}
.unlogin-title{
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #e6e6e6;
  color: #999;
  border-radius: 6rpx;
  margin-bottom: 18rpx;
}
.unlogin-text{
  font-size: 28rpx;
}
.user-info{
  width: 100%;
  padding: 50rpx 30rpx  50rpx 90rpx;
  background-color: #ff8400;
}
.user-img{
  width:100rpx;
  height:100rpx;
  border-radius:50rpx;
  border:1px #fff solid;
  box-shadow:0px 0px 13px #ccc;
  vertical-align:middle;
}
.user-name{
  display: inline-block;
  vertical-align: middle;
  margin-left:40rpx;
  color:#fff;

}
.list{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.list-item{
  border-bottom: 1rpx solid #e6e6e6;
  padding: 30rpx;
  padding-left: 0;
  margin-left: 30rpx;
}
.list-text{
  font-size: 30rpx;
  color: #333;
  vertical-align: middle;
}
.float-right{
  float: right;
}
.right-text{
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.arrow{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}
.list-icon{
width: 24rpx;
height: 24rpx;
vertical-align: middle;
}
.border-none{
  border: none;
}
