/* pages/goodsinfo/goodsinfo.wxss */
page{
   background: #f5f5f5;
}
.m-t-22{
  margin-top: 22rpx;
}
.section{
  background: #fff;
  padding-left: 30rpx;
}
.section .item{
  display: flex;
  align-items: center;
  font-size:28rpx;
 padding:30rpx 0;
  border-bottom: 1rpx solid #e6e6e6; 
   justify-content: space-between;
}
.section .item  .price-unit{
  padding-right: 30rpx;
  width:60rpx;
  text-align: right;
}
.section .item:last-child{
  border-bottom: 0;
}
.section .item .right-arrow{
   width:44rpx;
   height:44rpx;
    padding-left:13rpx;
   padding-right: 13rpx; 
}
.wenhao-icon{
  height:36rpx;
  width:36rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.modal{
 position: fixed;
  bottom:0;
  width:100%;
  z-index: 2;
  background: #fff;
}
.modal .title{
  font-size: 32rpx;
  color:#333;
  padding:30rpx ;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
   position: relative;
}
.modal .content{
 
  align-items: center;
  padding: 28rpx 18rpx;
   flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 25rpx;
}
.modal-2{
    border-radius:10rpx; 
}
.modal-2 .content{
  margin-left: 0rpx;
  font-size: 28rpx;
  color:#999;
  line-height: 42rpx;
  padding: 0rpx 60rpx;
  padding-bottom: 78rpx;

}
.modal-2 .title{
 font-size: 32rpx;
 color:#333;
 position: relative;
}
.content .item{
  display: inline-block;
  width:150rpx;
  text-align: center;
  font-size: 24rpx;
  color:#333;
  margin-bottom: 20rpx;
  height:60rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
 
}
.close-icon{
 width:24rpx;
 height:24rpx;
 padding: 10rpx;
 position: absolute;
 right: 20rpx;
 top:50%;
 transform: translate(0,-50%);
}
 .item input.value{
flex:1;
/* padding-right:0rpx; */
  text-align: right;
}
 .item text.value{
flex:1;
/* padding-right:40rpx; */
  text-align: right;
}
.content .item.active text{
  background:#ffebdd!important;
  color:#ff8400;
  border:1rpx solid  #ff8400;
}
.content .item text{
   width: 100%;
  display: inline-block;
  background: #f5f5f5;
  text-align: center;
  border-radius:4rpx; 
}
.modal-wrapper{
  background: #333;
  position: fixed;
  width:100%;
  height:100%;
  z-index: 1;
  top:0;
  opacity: .7;
}
.modal-2{
  top:30%;
  bottom: auto;
  width:90%;
  left: 5%;
  text-align: center;
}
.modal-2 .title{
  font-size: 32rpx;
  color:#333;
  padding: 46rpx 0;
  text-align: center;
  justify-content: center;
  border: 0;
}
.modal-2 content{
  text-align: center;
  color:#999;
  font-size: 28rpx;
  line-height: 42rpx;
  margin-left:0; 
}
.save-order{
  width:690rpx;
  background: #ff8400;
  border-radius:8rpx; 
  color:#fff;
   margin: 0 auto;
  margin-top: 30rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
 font-size: 36rpx;
}