/* pages/searchinfo/searchinfo.wxss */
page{
  background-color: #f9f9f9;
  height: 100%;
}
.search-box{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.search-info{
  width:690rpx;display: flex;padding: 20rpx 30rpx;background-color: #f9f9f9;
}
.search-bg{
  width: 600rpx;height: 60rpx;border: 1px solid #d9d9d9;border-radius: 30rpx;
  display: flex;flex-direction: row;align-items: center;background-color: #fff;
}
.tapsearch{
  font-size: 30rpx;align-self: center;margin-left: 16rpx;
}
.search-content{
  border-top: 1px solid #e6e6e6;padding: 0 30rpx;height: 100%;
}
.search-content .tis{
  display:flex; justify-content: space-between;padding: 30rpx 0;border-bottom: 1px solid #e6e6e6;
}
.search-content .tis text{
  font-size: 28rpx;color: #333;
}
.search-history{
  width: 100%;
}
.search-history .search-item{
  font-size: 28rpx;color: #333;padding: 30rpx 0;border-bottom: 1px solid #e6e6e6;
}
.search-mark{
  width: 26rpx;height: 26rpx;margin-left: 30rpx;
}
.flew-mark{
  width: 42rpx;height: 22rpx;margin: auto;
}
.start-addr{
  font-size: 28rpx;color: #333;margin-left: 20rpx;width: 180rpx;
  overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.end-addr{
  font-size: 28rpx;color: #333;margin-right: 30rpx;width: 180rpx;text-align: right;min-height: 30rpx;
  overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.search-results{
  border-top: 1px solid #e6e6e6;
}
.has-non-result{
  width: 100%;margin-top: 100rpx;display: flex;flex-direction: column;
  justify-content: center;align-items:center;
}
.has-non-result image{
  width: 260rpx;height: 259rpx;
}
.has-non-result .beizhu1{
  font-size: 36rpx;color: #333;margin-top: 40rpx;
}
.has-non-result .beizhu2{
  font-size: 28rpx;color: #666;margin-top: 30rpx;
}

.res-list{
  width: 100%;
}
.res-item{
  width: 100%;display: flex;flex-direction: column;margin-top: 20rpx;background-color: #fff;
}
.res-item:first-of-type{
  margin-top: 0;
}
.res-item .tis{
  height: 76rpx;border-bottom: 1px solid #e6e6e6;display: flex;align-items: center;
  padding: 0 30rpx;
}
.res-item .tis image{
  width: 36rpx;height: 32rpx;margin-right: 14rpx;
}
.res-item .tis text{
  font-size: 30rpx;color: #333;
}
.res-item .info{
  padding: 30rpx 40rpx;display: flex;flex-direction: row;align-items: center;
  border-bottom: 1px solid #e6e6e6;
}
.res-item .info .info-1{
  width: 48rpx;height: 30rpx;color: #ff8400;font-size: 20rpx;text-align: center;
  border: 1px solid #ff8400;border-radius: 4rpx;line-height: 30rpx;
}
.res-item .info .info-2{
  font-size: 30rpx;color: #333;margin-left: 20rpx;
}
.res-item .info .info-3{
  margin: auto;position: relative;
}
.res-item .info .info-4{
  
}
.res-item .info .info-3 image{
  width: 160rpx;height: 26rpx;
}
.res-item .info .info-3 text{
  font-size: 20rpx;color: #666;position: absolute;top: 50%;left: 50%;margin-top: -15rpx;margin-left: -40rpx;
}
.res-item .info .info-4 view{
  font-size: 30rpx;color: #333;
}
.res-item .info .info-4 .beizhu{
  font-size: 24rpx;color: #666;text-align: right;margin-top: 16rpx;
}
.res-item .status{
  display: flex;height: 80rpx;align-items: center;padding: 0 30rpx;
} 
.res-item .status text{
  font-size: 28rpx;color: #333;flex: 1;
}
.btns .btn{
  width: 120rpx;height: 50rpx;background-color: #ff8400;color: #fff;font-size: 28rpx;line-height: 50rpx;text-align: center;border-radius: 8rpx;
}


/** 三级联动 城市 */
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
}
.citypicker-bg{
  position: absolute;top: 0;left: 0;height: 100%;background-color: #000;
  opacity: 0.5;width: 100%;
}
.citybody {
  position: fixed;
  bottom: 0px;
  background: #fff;
}
.citybody picker-view-column{
  text-align: center;font-size: 30rpx;
}
.cityheader {
  position: absolute;
  top:0px;
  width: 84%;
  padding: 18rpx 8%;
  z-index: 4;
  background: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
}

.city-cancel {
  float: left;
  color: #818181;
  font-size: 30rpx;
}

.city-true {
  float: right;
  color: #ff8400;
  font-size: 30rpx;
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}