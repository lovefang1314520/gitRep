/* pages/addDeliver/addDeliver.wxss */
@import "../../templates/address.wxss";

page{
  background-color: #f5f5f5;
}
.list{
  background-color: #fff;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}
.input-box{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  align-items: center;
  padding: 30rpx;
  padding-left: 0;
}
.name-box{
  border-bottom: 1px solid #e6e6e6;

}
.label{
  width: 150rpx;
}
.input{
  flex-grow: 2;
}
.region-icon{
  width: 44rpx;
  height: 44rpx;
}
.region-box{
  flex-grow: 2;
}
.region-min-box{
  display: flex;
  align-items: center;
}
.region-text{
  color: #999;
}
.save-button{
  background-color: #ff8400;
  color: #fff;
  width: 690rpx;
  height: 88rpx;
  font-size: 36rpx;
  line-height: 88rpx;
  margin: 30rpx auto;
  border-radius: 10rpx;
  border:none;
}
.save-button::after{
border: none;
}


