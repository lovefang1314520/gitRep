page {
    width: 100%;
    height: 100%;
    background-color: #f9f9f9;
}
.mine-box {
    width: 100%;
    height: 100%;
}

.mine-user {
    width: 100%;
    height: 180rpx;
    background: #ffd600;
    text-align: center;
    border-bottom: 1px #f0f0f0 solid;
}
.mine-scan{
  position: absolute;
  right: 20rpx;
  top: 60rpx;
  width: 55rpx;
  height: 55rpx;
}

.mine-user-avatar {
    float: left;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin-top: 30rpx;
    margin-left: 40rpx;
    border: 1px #fff solid;
    -moz-box-shadow: 0px 0px 13px #ccc; 
    -webkit-box-shadow: 0p
    paramx 0px 13px #ccc; 
    box-shadow:0px 0px 13px #ccc;
}

.mine-user-name {
     float: left;
    
    font-size: 32rpx;
     margin-top: 65rpx;
    margin-left: 40rpx;
    color: #333;
    max-width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
  white-space: nowrap;
}

.mine-order {
    border-top: 1px #f0f0f0 solid;
    border-bottom: 1px #f0f0f0 solid;
    margin-top: 20rpx;
    background: #fff;
}

.mine-order-head {
    display: flex;
    flex-direction: row;
    align-items: center;
    line-height: 100rpx;
    border-bottom: 1px #f0f0f0 solid;
}

.mine-order-title {
    font-size: 32rpx;
    color: #222;
      margin-left: 30rpx;
}

.mine-all-order {
    font-size: 28rpx;
    color: #999;
    flex: 1;
    text-align: right;
}

.mine-right-arrow {
    width: 32rpx;
    height: 32rpx;
  
    margin-left: 10rpx;
    margin-right: 30rpx;
}

.mine-order-status-list {
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.mine-order-status-item {
    flex: 1;
    text-align: center;
}

.mine-order-img-box {
    height: 60rpx;
}

.mine-order-status-img {
    width: 40rpx;
    height: 40rpx;

}

.mine-order-status-label {
    font-size: 28rpx;
}
.m-t-20{
    margin-top: 20rpx;
}
.mine-cart {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    line-height: 100rpx;
    border-bottom: 1px #f0f0f0 solid;
    background: #fff;
}
.icon{
  width:45rpx;
  height:37.5rpx;
  margin-right: 20rpx;
}
.mine-cart-title {
    font-size: 32rpx;
    color: #222; 
}

.mine-spacing {
    flex: 1;
}

.mine-customer-service {
    /* margin-top: 30rpx; */
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    line-height: 100rpx;
    border-bottom: 1px #f0f0f0 solid;
    background: #fff;
    align-items: center;
}
